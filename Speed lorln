--==============================
-- Services
--==============================
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local player = Players.LocalPlayer

--==============================
-- Settings
--==============================
local TEXT = "LORLN ON TOPP EZ"
local SPEED = 0.05 -- ÙƒÙ„ Ù…Ø§ Ù‚Ù„ = Ø£Ø³Ø±Ø¹ (Ø®Ø·Ø±)
local ENABLED = true

--==============================
-- ğŸ”´ ØªØ®Ø±ÙŠØ¨ GUI
--==============================
local function corruptGUI(obj)
	if obj:IsA("TextLabel") or obj:IsA("TextButton") or obj:IsA("TextBox") then
		obj.Text = TEXT
		obj.TextScaled = true
		obj.Font = Enum.Font.Arcade
		obj.TextColor3 = Color3.fromRGB(math.random(0,255),math.random(0,255),math.random(0,255))
		obj.BackgroundColor3 = Color3.fromRGB(math.random(0,255),math.random(0,255),math.random(0,255))
		obj.Rotation = math.random(-180,180)
	end
end

for _,g in ipairs(player.PlayerGui:GetDescendants()) do
	corruptGUI(g)
end

player.PlayerGui.DescendantAdded:Connect(function(g)
	task.wait()
	corruptGUI(g)
end)

--==============================
-- ğŸ§  Ø¯Ø¨Ù„ GUI
--==============================
local function dupeGUI()
	for _, gui in ipairs(player.PlayerGui:GetDescendants()) do
		if gui:IsA("GuiObject") then
			pcall(function()
				local c = gui:Clone()
				c.Parent = gui.Parent
				c.Position = gui.Position + UDim2.new(0,math.random(-30,30),0,math.random(-30,30))
				corruptGUI(c)
			end)
		end
	end
end

--==============================
-- ğŸ§± ØªØ®Ø±ÙŠØ¨ + Ø¯Ø¨Ù„ Ø§Ù„Ù…Ø§Ø¨
--==============================
local function dupeMap()
	for _, obj in ipairs(workspace:GetDescendants()) do
		if obj:IsA("BasePart") then
			pcall(function()
				-- ØªØ®Ø±ÙŠØ¨
				obj.Color = Color3.fromRGB(math.random(0,255),math.random(0,255),math.random(0,255))
				obj.Material = Enum.Material.Neon
				obj.Orientation = Vector3.new(math.random(0,360),math.random(0,360),math.random(0,360))

				-- Ø¯Ø¨Ù„
				local c = obj:Clone()
				c.Parent = obj.Parent
				c.CFrame = obj.CFrame * CFrame.new(
					math.random(-6,6),
					math.random(-6,6),
					math.random(-6,6)
				)
			end)
		elseif obj:IsA("Decal") or obj:IsA("Texture") then
			obj:Destroy()
		end
	end
end

--==============================
-- ğŸ“¢ Billboard Ø³Ø¨Ø§Ù…
--==============================
for _, plr in ipairs(Players:GetPlayers()) do
	if plr.Character and plr.Character:FindFirstChild("Head") then
		local bill = Instance.new("BillboardGui")
		bill.Size = UDim2.new(0,300,0,100)
		bill.AlwaysOnTop = true
		bill.Parent = plr.Character.Head

		local txt = Instance.new("TextLabel", bill)
		txt.Size = UDim2.new(1,0,1,0)
		txt.BackgroundTransparency = 1
		txt.Text = TEXT
		txt.TextScaled = true
		txt.Font = Enum.Font.Arcade
		txt.TextColor3 = Color3.fromRGB(255,0,0)
	end
end

--==============================
-- ğŸ˜ˆ Loop Ø§Ù„ØªØ®Ø±ÙŠØ¨ + Ø§Ù„Ø¯Ø¨Ù„
--==============================
task.spawn(function()
	while ENABLED do
		dupeGUI()
		dupeMap()
		task.wait(SPEED)
	end
end)

--==============================
-- ğŸ“º Ø§Ù‡ØªØ²Ø§Ø² Ø§Ù„Ø´Ø§Ø´Ø©
--==============================
RunService.RenderStepped:Connect(function()
	if ENABLED and workspace.CurrentCamera then
		workspace.CurrentCamera.CFrame *= CFrame.Angles(
			math.rad(math.random(-2,2)),
			math.rad(math.random(-2,2)),
			0
		)
	end
end)

--==============================
-- â›” Ø²Ø± Ø¥ÙŠÙ‚Ø§Ù (L)
--==============================
UserInputService.InputBegan:Connect(function(i,gp)
	if gp then return end
	if i.KeyCode == Enum.KeyCode.L then
		ENABLED = false
		warn("ğŸ”¥ CHAOS STOPPED")
	end
end)
